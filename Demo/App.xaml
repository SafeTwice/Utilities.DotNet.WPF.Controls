<Application x:Class="Demos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Demos"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Placeholder for theme loading, must be first -->
                <ResourceDictionary/>
                <!-- Dynamic resources to be reloaded when the theme changes, must be second -->
                <ResourceDictionary Source="Resources/DynamicResources.xaml"/>
                <ResourceDictionary Source="Resources/StaticResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
